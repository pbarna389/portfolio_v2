{
	"name": "portfolio_v2",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"lint": "npm-run-all --continue-on-error lint:eslint lint:stylelint",
		"fix": "npm-run-all --continue-on-error fix:eslint fix:stylelint",
		"lint:eslint": "eslint .",
		"lint:stylelint": "stylelint '**/*.{css,scss,sass,less}'",
		"fix:eslint": "eslint . --fix",
		"fix:stylelint": "stylelint '**/*.{css,scss,sass,less}' --fix",
		"preview": "vite preview",
		"prepare": "husky"
	},
	"lint-staged": {
		"**/*.js": "eslint --fix",
		"**/*.ts": "eslint --fix",
		"**/*.jsx": "eslint --fix",
		"**/*.tsx": "eslint --fix",
		"**/*.css": "stylelint --fix",
		"**/*.scss": "stylelint --fix",
		"**/*.sass": "stylelint --fix",
		"**/*.{js,ts,jsx,tsx,css,scss,sass}": "prettier --write"
	},
	"dependencies": {
		"@emailjs/browser": "^4.4.1",
		"@eslint-react/eslint-plugin": "^1.28.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-google-recaptcha": "^3.1.0",
		"react-scan": "^0.2.7",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"devDependencies": {
		"@eslint/js": "^9.21.0",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@types/react-google-recaptcha": "^2.1.9",
		"@vitejs/plugin-react": "^4.3.4",
		"@vitejs/plugin-react-swc": "^3.8.0",
		"eslint": "^9.21.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-react-hooks": "^5.1.0",
		"eslint-plugin-react-refresh": "^0.4.18",
		"globals": "^15.15.0",
		"husky": "^9.1.7",
		"npm-run-all": "^4.1.5",
		"prettier": "3.3.3",
		"stylelint": "^16.14.1",
		"stylelint-config-standard": "^37.0.0",
		"stylelint-prettier": "^5.0.3",
		"stylelint-scss": "^6.11.1",
		"typescript": "~5.7.2",
		"typescript-eslint": "^8.24.1",
		"vite": "^6.2.0"
	}
}
